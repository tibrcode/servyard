rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             request.auth.token.email.matches('.*@(tibrcode|servyard|serv-yard)\\.com$');
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // PROFILES - ملفات المستخدمين
    // ═══════════════════════════════════════════════════════════════════════════
    match /profiles/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId) && (
        !request.resource.data.keys().hasAny(['latitude', 'longitude']) ||
        (
          request.resource.data.latitude is number &&
          request.resource.data.longitude is number &&
          request.resource.data.latitude >= -90 &&
          request.resource.data.latitude <= 90 &&
          request.resource.data.longitude >= -180 &&
          request.resource.data.longitude <= 180
        )
      );
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // SERVICES - الخدمات
    // ═══════════════════════════════════════════════════════════════════════════
    match /services/{serviceId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.provider_id == request.auth.uid;
      allow update, delete: if isSignedIn() && 
                               resource.data.provider_id == request.auth.uid;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // SERVICE CATEGORIES - فئات الخدمات
    // ═══════════════════════════════════════════════════════════════════════════
    match /service_categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // BOOKINGS - الحجوزات
    // ═══════════════════════════════════════════════════════════════════════════
    match /bookings/{bookingId} {
      allow read: if isSignedIn() && 
                     (resource.data.customer_id == request.auth.uid || 
                      resource.data.provider_id == request.auth.uid ||
                      isAdmin());
      allow create: if isSignedIn() && 
                       request.resource.data.customer_id == request.auth.uid;
      allow update: if isSignedIn() && 
                       (resource.data.customer_id == request.auth.uid || 
                        resource.data.provider_id == request.auth.uid);
      allow delete: if isOwner(resource.data.customer_id) || isAdmin();
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // REVIEWS - التقييمات
    // ═══════════════════════════════════════════════════════════════════════════
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.customer_id == request.auth.uid;
      allow update, delete: if isSignedIn() && 
                               resource.data.customer_id == request.auth.uid;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // OFFERS - العروض
    // ═══════════════════════════════════════════════════════════════════════════
    match /offers/{offerId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.provider_id == request.auth.uid;
      allow update, delete: if isSignedIn() && 
                               resource.data.provider_id == request.auth.uid;
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // SERVICE SCHEDULES - جداول الخدمات
    // ═══════════════════════════════════════════════════════════════════════════
    match /service_schedules/{scheduleId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.provider_id == request.auth.uid;
      allow update, delete: if isSignedIn() && 
                               resource.data.provider_id == request.auth.uid;
    }

    // ═══════════════════════════════════════════════════════════════════════════
    // SERVICE AVAILABILITY - توفر الخدمات
    // ═══════════════════════════════════════════════════════════════════════════
    match /service_availability/{availabilityId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.provider_id == request.auth.uid;
      allow update, delete: if isSignedIn() && 
                               resource.data.provider_id == request.auth.uid;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // SERVICE SPECIAL DATES - تواريخ خاصة
    // ═══════════════════════════════════════════════════════════════════════════
    match /service_special_dates/{dateId} {
      allow read: if true;
      allow create: if isSignedIn() && 
                       request.resource.data.provider_id == request.auth.uid;
      allow update, delete: if isSignedIn() && 
                               resource.data.provider_id == request.auth.uid;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // FAVORITES - المفضلة
    // ═══════════════════════════════════════════════════════════════════════════
    match /favorites/{favoriteId} {
      allow read: if isSignedIn() && resource.data.user_id == request.auth.uid;
      allow create: if isSignedIn() && 
                       request.resource.data.user_id == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.user_id == request.auth.uid;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // BOOKING REMINDERS - تذكيرات الحجوزات
    // ═══════════════════════════════════════════════════════════════════════════
    match /booking_reminders/{reminderId} {
      allow read: if isSignedIn() && 
                     (resource.data.customer_id == request.auth.uid ||
                      resource.data.provider_id == request.auth.uid);
      allow write: if false;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // NOTIFICATIONS - الإشعارات
    // ═══════════════════════════════════════════════════════════════════════════
    match /notifications/{notificationId} {
      allow read: if isSignedIn() && resource.data.user_id == request.auth.uid;
      allow write: if false;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // ERROR LOGS - سجلات الأخطاء
    // ═══════════════════════════════════════════════════════════════════════════
    match /error_logs/{logId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // REQUEST TRACES - تتبع الطلبات
    // ═══════════════════════════════════════════════════════════════════════════
    match /request_traces/{traceId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }
    
    // ═══════════════════════════════════════════════════════════════════════════
    // WEB VITALS - إحصائيات الأداء
    // ═══════════════════════════════════════════════════════════════════════════
    match /web_vitals/{vitalId} {
      allow read: if isAdmin();
      allow create: if true;
      allow update, delete: if false;
    }
  }
}
